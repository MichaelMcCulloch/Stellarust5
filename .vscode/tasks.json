{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Deploy Server",
            "detail": "Will deploy the production build of stellarust, which can serve it's own client",
            "type": "shell",
            "command": "systemfd --no-pid -s https::0.0.0.0:8000 -- cargo-watch -c --no-gitignore -x 'run --package backend --bin stellarust --release';",
            "options": {
                "cwd": "${workspaceFolder}/"
            },
            "problemMatcher": [
                "$rustc"
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": "build"
        },
        {
            "label": "Install Typescript Deps",
            "type": "shell",
            "command": "npm install ",
            "options": {
                "cwd": "${workspaceFolder}/frontend",
            },
        },
        {
            "label": "Deploy Client",
            "type": "shell",
            "linux": {
                "command": "npm run build; rm -rf ${workspaceFolder}/frontend_static_files/static;  mv build/ ${workspaceFolder}/frontend_static_files/static/ ",
            },
            "windows": {
                "command": "npm run build; rm -r -fo ${workspaceFolder}/frontend_static_files/static;  mv build/ ${workspaceFolder}/frontend_static_files/static/ ",
            },
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/frontend",
            },
            "dependsOn": [
                "Install Typescript Deps"
            ],
            "isBackground": true,
        },
        {
            "label": "Debug Client",
            "type": "shell",
            "command": "npm start",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/frontend",
                "env": {
                    "HTTPS": "true",
                    "SSL_CRT_FILE": "${env:STELLARUST_CERT}",
                    "SSL_KEY_FILE": "${env:STELLARUST_KEY}"
                }
            },
            "dependsOn": [],
            "isBackground": true,
        }
    ]
}