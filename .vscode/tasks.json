{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Deploy Server",
            "type": "process",
            "command": "./deploy_server.sh",
            "args": [
                "${workspaceFolder}",
                "8000"
            ],
            "options": {
                "cwd": "${workspaceFolder}/.vscode/"
            },
            "problemMatcher": [
                "$rustc"
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": "build"
        },
        {
            "label": "Deploy React Client",
            "type": "shell",
            "command": "npm run build && miniserve  -p 3000  ./build/ --index index.html --spa",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/frontend_client"
            },
            "dependsOn": [],
            "isBackground": true,
        },
        {
            "label": "Debug React Client",
            "type": "shell",
            "command": "npm start",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/frontend_client"
            },
            "dependsOn": [],
            "isBackground": true,
        }
    ]
}