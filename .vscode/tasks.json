{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Deploy Server",
            "type": "shell",
            "command": "systemfd --no-pid -s https::0.0.0.0:8000 -- cargo-watch --ignore 'frontend_client/*' --ignore '.vscode/*' --ignore '.git/*' -x 'run --package backend --bin backend --release';",
            "options": {
                "cwd": "${workspaceFolder}/"
            },
            "problemMatcher": [
                "$rustc"
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": "build"
        },
        {
            "label": "Deploy React Client",
            "type": "shell",
            "command": "npm run build ; mv build/ ../actix_server/static/",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/frontend_client",
            },
            "dependsOn": [],
            "isBackground": true,
        },
        {
            "label": "Debug React Client",
            "type": "shell",
            "command": "npm start",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/frontend_client",
                "env": {
                    "HTTPS": "true",
                    "SSL_CRT_FILE": "${env:STELLARUST_CERT}",
                    "SSL_KEY_FILE": "${env:STELLARUST_KEY}"
                }
            },
            "dependsOn": [],
            "isBackground": true,
        }
    ]
}