{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Watch Backend",
            "type": "shell",
            "command": "cargo watch -c --quiet -d 0 --no-gitignore -x 'check --all' -s 'touch .trigger'",
            "options": {
                "cwd": "${workspaceFolder}/"
            },
            "problemMatcher": [
                "$rustc"
            ],
            "presentation": {
                "reveal": "always"
            },
        },
        {
            "label": "Watch Frontend",
            "type": "shell",
            "command": "cargo watch  -d 0 --no-gitignore --no-ignore  -w frontend/src/ -s '(cd frontend/; npm run lint)' -s 'rm -r target/release/build/frontend_static_files* && touch .trigger'",
            "options": {
                "cwd": "${workspaceFolder}/"
            },
            "problemMatcher": [
                "$rustc"
            ],
            "presentation": {
                "reveal": "always"
            },
        },
        {
            "label": "Watch Trigger File Success",
            "detail": "Will deploy the production build of stellarust, which can serve it's own client",
            "type": "shell",
            "command": "systemfd --no-pid -s https::0.0.0.0:8000 -- cargo watch -c --quiet --no-gitignore --no-ignore -d 0 -w '.trigger' -x 'run --package backend --bin stellarust --release';",
            "options": {
                "cwd": "${workspaceFolder}/"
            },
            "problemMatcher": [
                "$rustc"
            ],
            "presentation": {
                "reveal": "always"
            },
        },
        {
            "label": "Deploy Stellarust In Production Mode With Automagic Redeployement",
            "dependsOn": [
                "Watch Backend",
                "Watch Frontend",
                "Watch Build Check Success",
            ],
            "dependsOrder": "parallel",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Install Typescript Deps",
            "type": "shell",
            "command": "npm install ",
            "options": {
                "cwd": "${workspaceFolder}/frontend",
            },
        },
        {
            "label": "Deploy Client",
            "type": "shell",
            "linux": {
                "command": "npm run build; rm -rf ${workspaceFolder}/frontend_static_files/static;  mv build/ ${workspaceFolder}/frontend_static_files/static/ ",
            },
            "windows": {
                "command": "npm run build; rm -r -fo ${workspaceFolder}/frontend_static_files/static;  mv build/ ${workspaceFolder}/frontend_static_files/static/ ",
            },
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/frontend",
            },
            "dependsOn": [
                "Install Typescript Deps"
            ],
            "isBackground": true,
        },
        {
            "label": "Debug Client",
            "type": "shell",
            "command": "npm start",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/frontend",
                "env": {
                    "HTTPS": "true",
                    "SSL_CRT_FILE": "${env:STELLARUST_CERT}",
                    "SSL_KEY_FILE": "${env:STELLARUST_KEY}"
                }
            },
            "dependsOn": [],
            "isBackground": true,
        }
    ]
}