{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Deploy Server",
            "type": "shell",
            "command": "systemfd --no-pid -s https::0.0.0.0:8000 --  cargo-watch  --ignore 'frontend_client/*'  --ignore '.vscode/*'  --ignore '.git/*'  -x 'run --package backend --bin backend --release';",
            "options": {
                "cwd": "${workspaceFolder}/"
            },
            "problemMatcher": [
                "$rustc"
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": "build"
        },
        {
            "label": "Deploy React Client",
            "type": "shell",
            "command": "npm run build && miniserve  -p 3000  ./build/ --index index.html --spa --tls-cert $STELLARUST_CERT --tls-key $STELLARUST_KEY",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/frontend_client"
            },
            "dependsOn": [],
            "isBackground": true,
        },
        {
            "label": "Debug React Client",
            "type": "shell",
            "command": "HTTPS=true SSL_CRT_FILE=$STELLARUST_CERT SSL_KEY_FILE=$STELLARUST_KEY npm start",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/frontend_client"
            },
            "dependsOn": [],
            "isBackground": true,
        }
    ]
}