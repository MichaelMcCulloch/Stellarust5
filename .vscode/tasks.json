{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Deploy Server",
            "command": "systemfd --no-pid -s http::8000 -- cargo-watch -x 'run --package actix_server --bin actix_server_bin --release'",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$rustc"
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": "build"
        },
        {
            "label": "Deploy Yew Client",
            "type": "shell",
            "command": "trunk serve --release",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/yew_frontend"
            },
            "dependsOn": [],
            "isBackground": true,
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "Deploy React Client",
            "type": "shell",
            "command": "npm run build && miniserve  -p 3000  ./build/ --index index.html --spa",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/frontend_client"
            },
            "dependsOn": [],
            "isBackground": true,
        },
        {
            "label": "Debug React Client",
            "type": "shell",
            "command": "npm start",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/frontend_client"
            },
            "dependsOn": [],
            "isBackground": true,
        }
    ]
}