{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Deploy Stellarust",
            "detail": "Will deploy the production build of stellarust, which can serve it's own client",
            "type": "shell",
            "command": "systemfd --no-pid -s https::0.0.0.0:8000 -- cargo-watch -c --no-gitignore -x 'run --package backend --bin stellarust --release';",
            "options": {
                "cwd": "${workspaceFolder}/"
            },
            "problemMatcher": [
                "$rustc"
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": "build"
        },
        {
            "label": "Deploy React Client",
            "type": "shell",
            "linux": {
                "command": "npm run build ; rm -rf ../actix_server/static;  mv build/ ../actix_server/static/ ",
            },
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/frontend_client",
            },
            "dependsOn": [],
            "isBackground": true,
        },
        {
            "label": "Debug React Client",
            "type": "shell",
            "command": "npm start",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/frontend_client",
                "env": {
                    "HTTPS": "true",
                    "SSL_CRT_FILE": "${env:STELLARUST_CERT}",
                    "SSL_KEY_FILE": "${env:STELLARUST_KEY}"
                }
            },
            "dependsOn": [],
            "isBackground": true,
        }
    ]
}